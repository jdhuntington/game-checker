<% content_for :header, 'Log In' %>

<%= form_tag session_path, :class => 'form-stacked' do |f| %>
<div class="clearfix">
  <label for="username">Username</label>
  <div class="input">
    <input type="text" name="username" class="xlarge" />
  </div>
</div>

<div class="clearfix">
  <label for="password">Password</label>
  <div class="input">
    <input type="password" name="password" class="xlarge"/>
  </div>
</div>

<div class="actions">
  <input type="submit" name="login" value="Login" class="btn primary" />
</div>
<% end %>
