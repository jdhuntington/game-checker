<% content_for :header, 'Listing games' %>

<table>
  <tr>
    <th>Url</th>
    <th>My turn</th>
    <th>Ended at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.url %></td>
    <td><%= game.my_turn %></td>
    <td><%= game.ended_at %></td>
    <td><%= link_to 'Check status', check_game_path(game), :method => 'post' %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<h2>Add Game</h2>
<%= render 'form' %>
